@using CBR.Web.WebCommons
@model CBR.Web.Models.ProjectsViewModel
<style>

    .project-side-active {
        border-left:5px solid #173967 !important;
    }

</style>
<div class="col-sm-6 col-sm-offset-0 col-md-3 col-md-offset-0">
    <!-- div data-spy="affix" data-offset-top="20" -->
    <div class="row">
        <div class="col-sm-6 col-sm-offset-0 col-md-12 col-md-offset-0">
            <h2 class="sub-header project-title" style="text-transform:uppercase;font-size:18px;padding:30px 0px;">@string.Concat(ViewBag.Title.ToUpper(), " PROJECT")</h2>
        </div>
    </div>
    <div class="project-navigation-left">
        <ul class="nav nav-documents">
            <li>
                <center><h4><span class="label label-default">@UtilityFunctions.GetDefaultBanksTenantName(User.Identity.Name)</span></h4></center>
            </li>         
            <li class="active">
                <a role="button" href="@Url.Action("ProjectView", "Project", new { viewName = ViewBag.Title, tag = "default" })"><i class="fa fa-dashboard"></i> Project Home Page</a>
            </li>
            <li role="separator" class="divider"></li>
            
            @foreach (var dept in Model.DocsTypes)
            {
                <li class="docTypes">
                    <a role="button" href="@Url.Action("ProjectDocumentView", "Project", new {viewName = ViewBag.Title, tag = "document", docType = @dept.DocumentType })">
                        <i class="fa fa-folder-o"></i> @dept.DocumentDisplayName
                        <span ng-class="{'showElement': @dept.NewDocCount > 0}" ng-if="@dept.NewDocCount > 0" class="badge newDocument hideElement"> @dept.NewDocCount New</span>
                    </a>
                </li>
                <li role="separator" class="divider"></li>
            }
        </ul>
    </div>
    <div class="help-message">
        <span><small><i class="fa fa-info-circle fa-2x"></i> Browse documents and return to your dashboard using the tabs above.</small></span>
    </div>
    <!-- END .project-navigation-left -->
    <!-- /div -->
    <!-- END affix -->
</div>
